// prisma/schema.prisma

datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

model PatientNote {
  id        String @id @default(cuid())
  patientId String
  authorId  String

  title     String?
  content   String   @db.Text
  noteType  NoteType @default(PROGRESS)
  isPrivate Boolean  @default(false) // Only visible to staff

  patient User @relation("PatientNotes", fields: [patientId], references: [id], onDelete: Cascade)
  author  User @relation("AuthorNotes", fields: [authorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?

  @@index([patientId])
  @@index([authorId])
  @@map("patient_notes")
}

model User {
  id                    String                 @id @default(cuid())
  name                  String
  email                 String                 @unique
  emailVerified         DateTime?
  image                 String?
  role                  UserRole               @default(PATIENT)
  hashedPassword        String?
  lockedAt              DateTime?
  lockedReason          String?
  scheduledDeletionAt   DateTime?
  accounts              Account[]
  sessions              Session[]
  deletionConfirmations DeletionConfirmation[]
  notes                 PatientNote[]          @relation("PatientNotes")
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  deletedAt             DateTime?
  patientNotes          PatientNote[]
  authoredNotes         PatientNote[]          @relation("AuthorNotes")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model DeletionConfirmation {
  id                String    @id @default(cuid())
  confirmationCode  String    @unique
  provider          String
  providerAccountId String
  userId            String
  status            String    @default("pending") // pending, completed, failed
  requestedAt       DateTime  @default(now())
  completedAt       DateTime?
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([provider, providerAccountId])
  @@map("deletion_confirmations")
}

enum UserRole {
  PATIENT
  THERAPIST
  ADMIN
}

enum NoteType {
  PROGRESS // Progress note
  ASSESSMENT // Assessment findings
  TREATMENT_PLAN // Treatment plan
  GOAL // Goals set
  COMMUNICATION // Communication log
  DISCHARGE // Discharge summary
  GENERAL // General note
}
